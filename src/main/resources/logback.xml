<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
        <encoder>
            <!--<pattern>[%date{ISO8601}] [%level] [%logger{36}][%thread{15}] - %msg {%mdc}%n</pattern> -->
            <pattern>[%date{ISO8601}] [%level] [%logger{36}][%thread{15}] - %msg%n</pattern>
        </encoder>
    </appender>


    <root level="DEBUG">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
